<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NewPasswordFragment"
        android:padding="12dp">

        <TextView
            android:id="@+id/addPasswordHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="Add Password"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/addPasswordWebsite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Website/App"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_below="@id/addPasswordHeading"
            android:background="@drawable/pink_border"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/addPasswordUsername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Username"
            android:gravity="top"
            android:padding="12dp"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/pink_border"
            android:layout_below="@id/addPasswordWebsite"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/addPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Password"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_below="@id/addPasswordUsername"
            android:background="@drawable/pink_border"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:fontFamily="@font/poppins"/>

    </RelativeLayout>
</layout>